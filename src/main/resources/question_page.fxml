<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="800.0" prefHeight="400.0" prefWidth="800.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.QuestionPageController" style="-fx-background-image: url('/images/background.jpg'); -fx-background-size: cover; -fx-background-position: center;">
    <!-- Question Display Section -->
    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: blue;">
        <Label fx:id="questionLabel" text="Question will be here" alignment="CENTER" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: blue; -fx-border-radius: 20 20 20 20;-fx-background-radius: 15px; -fx-padding: 20px;" />
    </HBox>

    <!-- Options Section -->
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="200.0" spacing="10">
        <Button fx:id="optionA"
                onAction="#handleOptionA"
                text="Option A"
                textAlignment="CENTER"
                alignment="CENTER"
                minHeight="30.0"
                prefHeight="30.0"
                maxHeight="30.0"
                minWidth="150.0"
                prefWidth="150.0"
                maxWidth="150.0"
                style="-fx-font-size: 12px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" />

        <Button fx:id="optionB"
                onAction="#handleOptionB"
                text="Option B"
                textAlignment="CENTER"
                alignment="CENTER"
                minHeight="30.0"
                prefHeight="30.0"
                maxHeight="30.0"
                minWidth="150.0"
                prefWidth="150.0"
                maxWidth="150.0"
                style="-fx-font-size: 12px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" />

        <Button fx:id="optionC"
                mnemonicParsing="false"
                onAction="#handleOptionC"
                text="Option C"
                textAlignment="CENTER"
                alignment="CENTER"
                minHeight="30.0"
                prefHeight="30.0"
                maxHeight="30.0"
                minWidth="150.0"
                prefWidth="150.0"
                maxWidth="150.0"
                style="-fx-font-size: 12px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" />

        <Button fx:id="optionD"
                mnemonicParsing="false"
                onAction="#handleOptionD"
                text="Option D"
                textAlignment="CENTER"
                alignment="CENTER"
                minHeight="30.0"
                prefHeight="30.0"
                maxHeight="30.0"
                minWidth="150.0"
                prefWidth="150.0"
                maxWidth="150.0"
                style="-fx-font-size: 12px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" />

    </VBox>
</VBox>

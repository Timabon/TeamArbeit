<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="450.0" minWidth="800.0" prefHeight="450" prefWidth="800" style="-fx-background-image: url('/images/background.jpg'); -fx-background-size: cover; -fx-background-position: center;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.CostumeInterfaceController">
   <children>

      <!-- Costume Mode Label (Text) -->
      <VBox alignment="CENTER_LEFT" layoutX="190.0" layoutY="70.0" prefHeight="100.0" prefWidth="420.0" spacing="5" style="-fx-background-color: transparent;">
         <Label alignment="CENTER" prefHeight="120.0" prefWidth="420.0" style="-fx-background-color: blue; -fx-background-radius: 10px;">
            <font>
               <Font size="26.0" />
            </font>
            <graphic>
               <Text style="-fx-font-size: 24px; -fx-fill: white;" text="Costume Mode" />
            </graphic>
         </Label>
      </VBox>

      <!-- Costume Mode Buttons: Play, New Question, Delete Question -->
      <VBox alignment="CENTER" layoutY="180.0" prefHeight="260.0" prefWidth="800.0" spacing="20.0">
         <children>
            <Button fx:id="costumePlayButton" mnemonicParsing="false" onAction="#handleCostumePlay" prefHeight="35.0" prefWidth="150.0" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" text="Play" />
            <Button fx:id="costumeNewQuestionButton" mnemonicParsing="false" onAction="#handleCostumeNewQuestion" prefHeight="35.0" prefWidth="150.0" style="-fx-font-size: 16px;-fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" text="New Question" />
            <Button fx:id="costumeDeleteButton" mnemonicParsing="false" onAction="#handleCostumeDelete" prefHeight="35.0" prefWidth="150.0" style="-fx-font-size: 16px;-fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;" text="Delete Question" />
            <Button fx:id="costumeExitButton" mnemonicParsing="false" text="Exit" onAction="#handleCostumeExit" prefHeight="35.0" prefWidth="150.0" style="-fx-font-size: 16px;-fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px;"/>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets></VBox>
   </children>
</AnchorPane>

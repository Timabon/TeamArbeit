<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="450.0" minWidth="800.0" prefHeight="450" prefWidth="800" style="-fx-background-image: url('/images/background.jpg'); -fx-background-size: cover; -fx-background-position: center;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.LandingPageController">
   <children>

      <!-- Welcome Label (Background) -->
       <Label fx:id="welcomeLabel" alignment="CENTER" layoutX="190.0" layoutY="70.0" prefHeight="120.0" prefWidth="420.0" style="-fx-background-color: blue; -fx-background-radius: 10px;" />

      <!-- Play Button -->
      <Button fx:id="level1" style="-fx-font-size: 16px;" layoutX="335.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleLevel1" prefHeight="35.0" prefWidth="130.0" text="Level 1" />

      <!-- New Question Button -->
      <Button fx:id="level2" style="-fx-font-size: 16px;" layoutX="335.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleLevel2" prefHeight="35.0" prefWidth="130.0" text="Level 2" />

      <!-- Level 3 Button -->
      <Button fx:id="level3" style="-fx-font-size: 16px;" layoutX="335.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleLevel3" prefHeight="35.0" prefWidth="130.0" text="Level 3" />

      <!-- Level 3 Button -->
      <Button fx:id="custom" style="-fx-font-size: 16px;" layoutX="335.0" layoutY="400.0" mnemonicParsing="false" onAction="#handleCustom" prefHeight="35.0" prefWidth="130.0" text="Custom" />

      <!-- Welcome Text (Centered) -->
      <VBox alignment="CENTER" prefHeight="260.0" prefWidth="800.0" spacing="5" style="-fx-background-color: transparent;">
         <Text style="-fx-font-size: 24px; -fx-fill: white;" text="Ready to test your knowledge?" />
         <Text style="-fx-font-size: 24px; -fx-fill: white;" text="Choose a level to start the fun!" />
      </VBox>
   </children>
</AnchorPane>

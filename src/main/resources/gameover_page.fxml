<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.GameOverPageController" prefWidth="800.0" prefHeight="400.0" minWidth="800.0" minHeight="400.0"
      style="-fx-background-image: url('/images/background.jpg'); -fx-background-size: cover; -fx-background-position: center;">
    <!-- Score Section with Blue Box -->
    <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 20;">
        <Label fx:id="scoreLabel" style="-fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 20px; -fx-padding: 10px;" />
    </HBox>

    <!-- Result Section with Blue Box -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 30;">
        <Label fx:id="resultText" style="-fx-font-size: 26px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 15px; -fx-padding: 30px;" text="Result text" />
    </HBox>

    <!-- New Game Box (below Result Text) -->
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-background-color: blue; -fx-padding: 10px; -fx-background-radius: 10px;" text="New Game" />
    </VBox>

    <!-- Yes/No Buttons (below New Game Box) -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="yesButton" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 5px;" text="Yes" onAction="#handleYesButton" />
        <Button fx:id="noButton" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: blue; -fx-background-radius: 5px;" text="No" onAction="#handleNoButton" />
    </HBox>
</VBox>
